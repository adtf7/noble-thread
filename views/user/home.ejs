
<%- include('../../views/partials/user/header.ejs')%>
<style>
.product__color__select {
    display: flex;
    gap: 5px;
    margin-top: 8px;
}
.color-label {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 1px solid #ddd;
    display: inline-block;
    cursor: pointer;
}
