<%- include('../../views/partials/user/header.ejs')%>
<style>
.shop__sidebar__category h5 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
}

.shop__sidebar__category ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.shop__sidebar__category li {
    margin-bottom: 8px;
}

.category-label {
    display: block;
    color: #6c757d; /* Muted text */
    font-size: 16px;
    cursor: pointer;
    transition: color 0.3s ease;
}

.category-label:hover {
    color: black;
}

.active-category {
    font-weight: bold;
    color: black;
}

.clear-category {
    display: block;
    margin-top: 10px;
    font-size: 16px;
    color: #6c757d; ;
    cursor: pointer;
    text-align: left;
    transition: color 0.3s ease;
}

.clear-category:hover {
    color: black;
}

.white {
    background-color: white;
    border: 1px solid #ccc; /* Adjust as needed */
    width: 30px; /* Adjust as needed */
    height: 30px; /* Adjust as needed */
    display: inline-block;
    cursor: pointer;
}

.product__pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 20px;
}

.product__pagination a {
    display: inline-block;
    padding: 8px 14px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 6px;
    transition: all 0.3s ease;
    background-color: #fff;
}

.active-size {
    font-weight: bold;
    color: red; /* Highlight the selected size */
}

.active-category {
    font-weight: bold;
    color: blue; /* Highlight selected category */
}

.active-price {
    font-weight: bold;
    color: #ff4500; /* Use your theme color */
    text-decoration: underline blue 2px;
}

.shop__sidebar__price a:hover {
    color: #ff4500; /* Use your theme color */
    text-decoration: underline;
}

.product__pagination a:hover,
.product__pagination a.active {
    background-color: #ff4500; /* Change to your theme color */
    color: #fff;
    border-color: #ff4500;
}

.product__pagination span {
    font-size: 16px;
    font-weight: 600;
    color: #888;
}

.product__pagination a {
    margin: 0 5px;
    padding: 10px 15px;
    border: 1px solid #ddd;
    text-decoration: none;
    color: #333;
}

.product__pagination a.active {
    background-color: #007bff;
    color: white;
}

.product__pagination a:hover:not(.active) {
    background-color: #ddd;
}

.shop__sidebar__color {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    align-items: center;
}

.color-label {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: inline-block;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.3s ease;
}

.color-label:hover {
    border: 2px solid black;
}

.active-color {
    border: 2px solid black;
}

#selectedColorInput {
    margin-left: 10px;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    width: 120px;
    text-align: center;
}

.clear-color {
    font-size: 16px;
    color: #007bff;
    cursor: pointer;
    transition: color 0.3s ease;
}

.clear-color:hover {
    color: black;
}
</style>

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shop</h4>
                    <div class="breadcrumb__links">
                        <a href="/">Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        <form action="/shop" method="GET">
                            <input type="text" name="search" placeholder="Search products..." value="<%= searchQuery %>">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="shop__sidebar__accordion">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                </div>
                                <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__category">
                                            <ul>
                                                <% if (categories.length > 0) { %>
                                                    <% categories.forEach(cat => { %>
                                                        <% if(cat.isListed){%>
                                                            <li>
                                                                <label class="category-label <%= selectedCategory === cat._id.toString() ? 'active-category' : '' %>"
                                                                       onclick="applyCategoryFilter('<%= cat._id %>')">
                                                                    <%= cat.name %>
                                                                </label>
                                                            </li>
                                                        <%}%>
                                                    <% }); %>
                                                <% } else { %>
                                                    <li><p>No categories available</p></li>
                                                <% } %>
                                            </ul>
                                            <label class="clear-category" onclick="clearCategoryFilter()">Clear</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseThree">Filter Price</a>
                                </div>
                                <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__price">
                                            <ul>
                                                <li>
                                                    <a href="<%= buildUrl({ minPrice: 0, maxPrice: 1000, page: 1 }) %>" 
                                                       class="<%= (minPrice == 0 && maxPrice == 1000) ? 'active-price' : '' %>">
                                                        ₹ 0 - ₹ 1,000.00
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="<%= buildUrl({ minPrice: 1000, maxPrice: 5000, page: 1 }) %>" 
                                                       class="<%= (minPrice == 1000 && maxPrice == 5000) ? 'active-price' : '' %>">
                                                        ₹ 1,000.00 - ₹ 5,000.00
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="<%= buildUrl({ minPrice: 5000, maxPrice: 10000, page: 1 }) %>" 
                                                       class="<%= (minPrice == 5000 && maxPrice == 10000) ? 'active-price' : '' %>">
                                                        ₹ 5,000.00 - ₹ 10,000.00
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="<%= buildUrl({ minPrice: 10000, maxPrice: 15000, page: 1 }) %>" 
                                                       class="<%= (minPrice == 10000 && maxPrice == 15000) ? 'active-price' : '' %>">
                                                        ₹ 10,000.00 - ₹ 15,000.00
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="<%= buildUrl({ minPrice: 15000, maxPrice: 25999, page: 1 }) %>" 
                                                       class="<%= (minPrice == 15000 && maxPrice == 25999) ? 'active-price' : '' %>">
                                                        ₹ 15,000.00 - ₹ 25,999.00
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="<%= buildUrl({ minPrice: 25999, page: 1 }) %>" 
                                                       class="<%= (minPrice == 25999 && !maxPrice) ? 'active-price' : '' %>">
                                                        ₹ 25,999.00 +
                                                    </a>
                                                </li>
                                                <li><a href="/shop">Clear</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
