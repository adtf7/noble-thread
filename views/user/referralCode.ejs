<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Code</title>
    <style>
        /* Reset some basic styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: #ffffff;
            width: 100%;
            max-width: 480px;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
            transform: scale(1);
            transition: all 0.3s ease-in-out;
        }
        .container:hover {
            transform: scale(1.02);
        }
        h2 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        label {
            font-size: 14px;
            color: #555;
            text-align: left;
            margin-bottom: 5px;
            display: block;
        }
        input[type="text"] {
            width: 100%;
            padding: 12px;
            margin: 15px 0;
            border: 2px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
            outline: none;
            transition: all 0.3s ease;
        }
        input[type="text"]:focus {
            border-color: #007BFF;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }
        button {
            width: 100%;
            padding: 14px;
            background-color: #007BFF;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
        .error, .success {
            font-size: 14px;
            margin-top: 10px;
            padding: 8px;
            border-radius: 4px;
        }
        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .error + .success {
            margin-top: 20px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
        }
        .button-container button {
            width: 48%;
        }
        @media (max-width: 480px) {
            .container {
                padding: 20px;
            }
            h2 {
                font-size: 20px;
            }
            input[type="text"], button {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Referral Code Generator</h2>
        <form id="referralForm">
            <div class="form-group">
                <label for="referralCode">Referral Code (8 Digits)</label>
                <input type="text" id="referralCode" name="referralCode" maxlength="8" placeholder="Enter 8-digit referral code" required>
            </div>
            <div id="error-message" class="error"></div>
            <div id="success-message" class="success"></div>
            <div class="button-container">
                <button type="button" id="skipButton">Skip</button>
                <button type="submit">Submit Code</button>
            </div>
        </form>
    </div>

    <script>
        // Form submission via Fetch
        document.getElementById("referralForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Prevent default form submission

            const referralCode = document.getElementById("referralCode").value;
            const errorMessage = document.getElementById("error-message");
            const successMessage = document.getElementById("success-message");

            // Validate the referral code (must be 8 digits)
            if (referralCode && !/^\d{8}$/.test(referralCode)) {
                errorMessage.textContent = "Referral code must be exactly 8 digits.";
                successMessage.textContent = ""; // Clear any success messages
                return;
            }

            // Clear previous messages
            errorMessage.textContent = "";
            successMessage.textContent = "";

            // Send the referral code via Fetch API
            fetch('/submitreferral', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ referralCode: referralCode || null })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    successMessage.textContent = `Referral Code ${referralCode || 'skipped'} has been successfully submitted!`;
                    errorMessage.textContent = ""; 
                     window.location.href = '/'
                } else {
                    errorMessage.textContent = data.message || "Something went wrong.";
                    successMessage.textContent = ""; // Clear success message if any
                }
            })
            .catch(error => {
                errorMessage.textContent = "An error occurred: " + error.message;
                successMessage.textContent = ""; // Clear success message if any
            });
        });

        // Handle Skip button (Redirect to home page)
        document.getElementById("skipButton").addEventListener("click", function() {
            // Redirect to home page (you can change the URL here to whatever home page route you need)
            window.location.href = '/';
        });
    </script>
</body>
</html>
