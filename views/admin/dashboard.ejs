<%- include('../../views/partials/admin/header.ejs') %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background: #f5f5f5;
        color: #333;
        display: flex;
        min-height: 100vh;

    }


    /* Main Content */
    .main-content {
        margin-left: 350px;
        flex-grow: 1;
        padding: 20px;
    }

    /* Header */
    .header {
        background: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .header h1 {
        font-size: 24px;
        font-weight: 600;
        color: #374151;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .user-info img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    /* Dashboard Widgets */
    .dashboard-widgets {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .widget {
        background: white;
        padding: 20px;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: all 0.3s ease;
    }

    .widget:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .widget h3 {
        font-size: 18px;
        margin-bottom: 10px;
        color: #6b7280;
    }

    .widget p {
        font-size: 24px;
        font-weight: 600;
        color: #374151;
    }

    /* Chart Section */
    .chart-section {
        background: white;
        padding: 20px;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .chart-header h2 {
        font-size: 20px;
        font-weight: 600;
        color: #374151;
    }

    .filter-select {
        padding: 8px;
        border: 1px solid #d1d5db;
        border-radius: 5px;
        font-size: 14px;
        background: white;
        color: #374151;
        outline: none;
        transition: border-color 0.3s ease;
    }

    .filter-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }

    /* Orders Table */
    .orders-table {
        background: white;
        padding: 20px;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .orders-table h2 {
        font-size: 20px;
        font-weight: 600;
        color: #374151;
        margin-bottom: 15px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
    }

    th {
        background: #007bff;
        color: white;
        font-weight: 600;
    }

    tr {
        transition: background 0.3s ease;
    }

    tr:hover {
        background: #f9fafb;
    }

    td {
        color: #4b5563;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .sidebar {
            width: 80px;
        }

        .sidebar h2, .sidebar ul li a span {
            display: none;
        }

        .main-content {
            margin-left: 80px;
        }
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<body>
  

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header">
            <h1>Dashboard</h1>
           
           
        </div>

        <!-- Dashboard Widgets -->
        <div class="dashboard-widgets">
            <div class="widget">
                <h3>Total Users</h3>
                <p><%= totalUsers || 0 %></p>
            </div>
            <div class="widget">
                <h3>Total Orders</h3>
                <p><%= totalOrders || 0 %></p>
            </div>
            <div class="widget">
                <h3>Total Revenue</h3>
                <p>₹<%= totalRevenue ? totalRevenue.toFixed(2) : '0.00' %></p>
            </div>
            <div class="widget">
                <h3>Pending Orders</h3>
                <p><%= pendingOrders || 0 %></p>
            </div>
            <div class="widget">
                <h3>Total Product<h3>
                <p><%= totalProducts || 0 %></p>
            </div>
            <div class="widget">
                <h3>Total category<h3>
                <p><%= totalcategories || 0 %></p>
            </div>
        </div>

        <!-- Chart Section -->
        <div class="chart-section">
            <div class="chart-header">
                <h2>Revenue Overview</h2>
                <select class="filter-select" id="chartFilter" onchange="updateChart()">
                    <option value="yearly">Yearly</option>
                    <option value="monthly">Monthly</option>
                    <option value="weekly">Weekly</option>
                </select>
            </div>
            <canvas id="revenueChart" height="100"></canvas>
        </div>
  
        <div class="table-section orders-table">
            <h2>Best Selling Products (Top 5)</h2>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Total Sold</th>
                    </tr>
                </thead>
                <tbody>
                    <% bestSellingProducts.forEach((product, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= product.name || 'N/A' %></td>
                            <td><%= product.totalSold %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <br><br>
        <!-- Best Selling Categories -->
        <div class="table-section orders-table">
            <h2>Best Selling Categories (Top 5)</h2>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category</th>
                        <th>Total Sold</th>
                    </tr>
                </thead>
                <tbody>
                    <% bestSellingCategories.forEach((category, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= category._id || 'N/A' %></td>
                            <td><%= category.totalSold %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div><br><br>
        <!-- Recent Orders Table -->
        <div class="orders-table">
            <h2>Recent Orders</h2>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (recentOrders && recentOrders.length > 0) { %>
                        <% recentOrders.forEach((order, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>#<%= order.orderId %></td>
                                <td><%= order.userId ? order.userId.email : 'N/A' %></td>
                                <td><%= new Date(order.createdOn).toLocaleDateString('en-US') %></td>
                                <td>₹<%= order.finalAmount ? order.finalAmount.toFixed(2) : '0.00' %></td>
                                <td><%= order.status %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6">No recent orders found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Sample data (replace with dynamic data from backend)
        const revenueData = {
            yearly: {
                labels: ['2020', '2021', '2022', '2023', '2024', '2025'],
                data: [50000, 60000, 75000, 90000, 110000, 130000]
            },
            monthly: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                data: [10000, 12000, 15000, 13000, 14000, 16000, 18000, 17000, 19000, 20000, 21000, 22000]
            },
            weekly: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                data: [3000, 4500, 4000, 5000]
            }
        };

        // Initialize Chart
        const ctx = document.getElementById('revenueChart').getContext('2d');
        let revenueChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: revenueData.yearly.labels,
                datasets: [{
                    label: 'Revenue (₹)',
                    data: revenueData.yearly.data,
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Revenue (₹)', color: '#374151' },
                        ticks: { color: '#6b7280' }
                    },
                    x: {
                        title: { display: true, text: 'Time', color: '#374151' },
                        ticks: { color: '#6b7280' }
                    }
                },
                plugins: {
                    legend: {
                        labels: { color: '#374151' }
                    }
                }
            }
        });

        // Update Chart based on filter
        function updateChart() {
            const filter = document.getElementById('chartFilter').value;
            const selectedData = revenueData[filter];

            revenueChart.data.labels = selectedData.labels;
            revenueChart.data.datasets[0].data = selectedData.data;
            revenueChart.update();
        }

        // Initial chart load
        document.addEventListener('DOMContentLoaded', () => {
            updateChart();
        });
    </script>
</body>
</html>