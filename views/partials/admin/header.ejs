<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Noble Threads - Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
  <script src="https://kit.fontawesome.com/a2d9d5a4f9.js" crossorigin="anonymous"></script>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lacquer&display=swap');
    .brand {
      font-family: 'Lacquer', cursive;
    }
    .active {
      background-color: #4A5568;
    }
  </style>
</head>

<body class="bg-white text-black">
  <!-- Mobile Header -->
  <div class="bg-gray-900 text-white p-4 flex items-center justify-between md:hidden fixed top-0 w-full z-40">
    <h1 class="text-xl font-bold brand text-red-500">Noble Threads</h1>
    <button id="menu-toggle" class="focus:outline-none">
      <i class="fas fa-bars text-2xl"></i>
    </button>
  </div>

  <div class="flex pt-16 md:pt-0">
    <!-- Sidebar -->
    <div id="sidebar"
         class="fixed top-0 left-0 h-screen w-64 bg-gray-900 text-white p-5 transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out z-50">
      <h1 class="text-2xl font-bold brand text-red-500 mb-6 hidden md:block">Noble Threads</h1>
      <ul class="space-y-3 mt-6 md:mt-0">
        <li class="<%= currentPage === 'dashboard' ? 'active' : '' %>">
          <a href="/admin/dashboard" class="block p-2 rounded hover:bg-gray-700">Dashboard</a>
        </li>
        <li class="<%= currentPage === 'customers' ? 'active' : '' %>">
          <a href="/admin/customers" class="block p-2 rounded hover:bg-gray-700">Customers</a>
        </li>
        <li class="<%= currentPage === 'category' ? 'active' : '' %>">
          <a href="/admin/category" class="block p-2 rounded hover:bg-gray-700">Category</a>
        </li>
        <li class="<%= currentPage === 'add-product' ? 'active' : '' %>">
          <a href="/admin/productadd" class="block p-2 rounded hover:bg-gray-700">Add Product</a>
        </li>
        <li class="<%= currentPage === 'products' ? 'active' : '' %>">
          <a href="/admin/product" class="block p-2 rounded hover:bg-gray-700">Products</a>
        </li>
        <li class="<%= currentPage === 'coupon' ? 'active' : '' %>">
          <a href="/admin/coupon" class="block p-2 rounded hover:bg-gray-700">Coupon</a>
        </li>
        <li class="<%= currentPage === 'orders' ? 'active' : '' %>">
          <a href="/admin/orders" class="block p-2 rounded hover:bg-gray-700">Orders</a>
        </li>
        <li class="<%= currentPage === 'salesreport' ? 'active' : '' %>">
          <a href="/admin/salesreport" class="block p-2 rounded hover:bg-gray-700">Sales Report</a>
        </li>
        <li class="<%= currentPage === 'wallet' ? 'active' : '' %>">
          <a href="/admin/wallet" class="block p-2 rounded hover:bg-gray-700">Wallet</a>
        </li>
        <li>
          <a href="/admin/logout" class="block p-2 rounded hover:bg-gray-700 text-red-400">Logout</a>
        </li>
      </ul>
    </div>

    
  <script>
    // Sidebar toggle for mobile
    const toggleButton = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');

    toggleButton.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
      sidebar.classList.toggle('translate-x-0');
    });

    // Prevent navigating back after logout
    if (window.history && window.history.pushState) {
      window.history.pushState(null, null, window.location.href);
      window.onpopstate = function () {
        window.history.pushState(null, null, window.location.href);
      };
    }
  </script>
</body>
</html>
