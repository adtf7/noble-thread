<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f4f5f7;
      color: #444;
      margin: 0;
      padding: 0;
    }

    .dashboard {
      display: flex;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 250px;
      background-color: #ffffff;
      color: #444;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }

    .sidebar.hide {
      transform: translateX(-100%);
    }

    .sidebar.show {
      transform: translateX(0);
    }

    .sidebar .nav-links {
      list-style: none;
      padding: 0;
      margin-top: 20px;
      width: 100%;
    }

    .sidebar .nav-links li {
      width: 100%;
      margin-bottom: 10px;
    }

    .sidebar .nav-links a {
      display: block;
      padding: 12px;
      color: #444;
      text-decoration: none;
      transition: 0.3s;
      border-radius: 8px;
      text-align: center;
    }

    .sidebar .nav-links a:hover {
      background-color: #e5e5e7;
      transform: translateX(4px);
    }

    .nav-links a.active {
      background-color: #3182ce;
      color: white;
      font-weight: bold;
    }

    /* Toggle Button */
     .toggle-btn {
    position: absolute;
    top: 50px;
    left: 20px;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 30;
    display: none;
  }

    @media (max-width: 1020px) {
      .sidebar {
        position: absolute;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 10;
        transform: translateX(-100%);
      }

      .toggle-btn {
        display: block;
      }
    }

    @media (min-width: 1021px) {
      .toggle-btn {
        display: none !important;
      }
    }
  </style>
</head>
<body>

<!-- Toggle button -->
<button class="toggle-btn" onclick="toggleSidebar()">â˜°</button>

<!-- Dashboard Layout -->
<div class="dashboard">
  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <ul class="nav-links">
      <li><a href="/profile" class="<%= currentPage === 'profile' ? 'active' : '' %>">User Details</a></li>
      <li><a href="/address" class="<%= currentPage === 'addresses' ? 'active' : '' %>">Manage Addresses</a></li>
      <li><a href="/order-history" class="<%= currentPage === 'orders' ? 'active' : '' %>">Order History</a></li>
      <li><a href="/wallet" class="<%= currentPage === 'wallet' ? 'active' : '' %>">Wallet</a></li>
    </ul>
  </aside>


<!-- JavaScript -->
<script>
  const sidebar = document.getElementById("sidebar");

  function toggleSidebar() {
    sidebar.classList.toggle("show");
    sidebar.classList.toggle("hide");
  }

  function handleResize() {
    if (window.innerWidth > 1020) {
      sidebar.classList.remove("hide", "show");
    } else {
      sidebar.classList.add("hide");
      sidebar.classList.remove("show");
    }
  }

  // Initial check
  window.addEventListener('load', handleResize);
  // On resize
  window.addEventListener('resize', handleResize);
</script>

</body>
</html>
